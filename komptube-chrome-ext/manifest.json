{
  "manifest_version": 3,
  "name": "Komptube",
  "description": "Отправка страниц на телефон.",
  "version": "1.0",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://192.168.1.3/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ext.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "action": {
    "default_icon": {
      "19": "icon.png",
      "38": "icon.png"
    },
    "default_title": "Отправить на телефон",
    "default_popup": "popup.html"
  },

  "content_security_policy": {}
}
